{
  "name": "hello-tsx",
  "version": "0.0.0",
  "description": "",
  "main": "server",
  "scripts": {
    "lint": "prettier-standard '{bin,env,server,src}/**/*.{js,jsx,ts,tsx}' && standard --fix --parser @typescript-eslint/parser --plugin @typescript-eslint/eslint-plugin '{bin,env,server,src}/**/*.{js,jsx,ts,tsx}'",
    "test": "standard && jest",
    "preversion": "npm run test && git add -A",
    "postversion": "git push && git push --tags && (if [ -z \"$(node -p 'require(`./package.json`).version' | grep '-')\" ]; then npm publish; else npm publish --tag \"$(node -p 'require(`./package.json`).version' | sed -e 's/.*-//' -e 's/\\..*//')\"; fi)"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "d3": "^5.9.7",
    "debug": "^4.1.1",
    "graphql": "^14.4.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "prettier-standard": "^14.0.3",
    "standard": "^14.1.0",
    "typescript": "^3.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/dist/",
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/dist/",
      "/node_modules/"
    ]
  }
}
