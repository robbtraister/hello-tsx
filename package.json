{
  "name": "launchpad",
  "version": "1.0.0",
  "repository": "git@github.com:robbtraister/launchpad.git",
  "author": "robb.traister@gmail.com",
  "license": "MIT",
  "scripts": {
    "analyze": "yarn run --silent build --mode production --profile --json > ./stats.json && webpack-bundle-analyzer ./stats.json ./dist/ --mode static",
    "build": "webpack build --mode production",
    "build:css": "[ -f ./webpack.styles.ts ] && webpack build --config ./webpack.styles.ts",
    "build:vendors": "[ -f ./webpack.vendors.ts ] && ([ ! -f ./public/vendors-manifest.json ] || [ \"$(md5 -q ./node_modules/.yarn-integrity)\" != \"$(node -p \"require('./public/vendors-manifest.json').name.split('_').pop()\")\" ]) && NODE_OPTIONS=--max-old-space-size=4096 webpack build --config ./webpack.vendors.ts --env HASH=$(md5 -q ./node_modules/.yarn-integrity) || true",
    "clean:css": "rimraf './src/**/*.{css,scss}.d.ts'",
    "jest": "jest",
    "lint": "yarn run lint:ls && yarn run lint:css && yarn run lint:js",
    "lint:css": "stylelint --cache 'src/**/*.{scss,js,jsx,ts,tsx}'",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "lint:ls": "ls-lint",
    "posttypecheck": "yarn run --silent clean:css",
    "postupdate": "yarn run lint:css --fix && yarn run lint:js --fix",
    "prebuild": "yarn install --silent --frozen-lockfile && yarn run --silent clean:css",
    "prebuild:vendors": "yarn install --frozen-lockfile",
    "prestart": "yarn run stop 2> /dev/null; yarn run build:vendors 2> /dev/null",
    "pretest": "yarn install --frozen-lockfile",
    "pretypecheck": "yarn install --silent --frozen-lockfile && yarn run build:css > /dev/null",
    "start": "webpack serve",
    "stop": "lsof -i \"TCP:${PORT:-443}\" -s TCP:LISTEN | grep 'LISTEN' | awk '{ print $2; }' | xargs kill 2> /dev/null || true",
    "test": "yarn run jest",
    "typecheck": "tsc; CODE=$?; yarn run clean:css; exit $CODE",
    "update": "yarn run update:dependencies && yarn run update:msw",
    "update:dependencies": "npm-check-updates --filterVersion '/^[^0-9]/' -u '/^(?!'\"$(node -p 'Object.keys(require(\"./package.json\").resolutions || {}).join(\"$|\")')\"'$).*/' && rm -rf node_modules yarn.lock && yarn install",
    "update:msw": "msw init ./public"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.10.0",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/react": "^12.1.2",
    "@types/css-minimizer-webpack-plugin": "^3.0.2",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.2",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/node": "^16.11.2",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "@types/terser-webpack-plugin": "^5.2.0",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "css-loader": "^6.4.0",
    "css-minimizer-webpack-plugin": "^3.1.1",
    "eslint": "7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "glob": "^7.2.0",
    "html-webpack-plugin": "^5.4.0",
    "html-webpack-tags-plugin": "^3.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "jest-environment-jsdom": "^27.3.1",
    "lint-staged": "^11.2.3",
    "mini-css-extract-plugin": "^2.4.2",
    "msw": "^0.35.0",
    "prettier": "^2.4.1",
    "sass": "^1.43.2",
    "sass-loader": "^12.2.0",
    "style-loader": "^3.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "terser-webpack-plugin": "^5.2.4",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.4",
    "typescript-plugin-css-modules": "^3.4.0",
    "webpack": "^5.59.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.3.1"
  },
  "optionalDependencies": {
    "husky": "4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged --relative",
      "pre-push": "yarn run typecheck"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "yarn run --silent lint:js --fix",
    "*.{css,scss}": "yarn run --silent lint:css --fix",
    "src/**/*": "yarn run --silent lint:ls"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
